<body>

<p id= "notice"></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr>
     <td><%= book.title %></td>

     <td><%= book.body %></td>

     <td>
       <a class = "show">Show</a>
       <a class = "edit">Edit</a>
       <a class = "destroy">Destroy</a>
     </td>
    </tr>
    <% end %>
  </tbody>

</table>

<h2>New book</h2>
<%= form_with model:@book, local:true do |f|%>

<div class = "field">
  <label for="book_title">Title</label>
  <%= f.text_field :title %>
</div>

<div class ="field">
  <label for="book_body">Body</label>
  <%= f.text_area :body %>
</div>

<%= f.submit 'Create Book' %>

<% end %>

</body>