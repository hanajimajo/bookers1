<body>
    <h1>Editing Book</h1>


<%= form_with model:@book, local: true do |f| %>
    <div class = "field">
        <label for ="book_title">Title</label>
    </div>
    <%= f.text_field :title %>

    <div class = "field">
        <label for ="book_body">Body</label>
    </div>
    <%= f.text_area :body %>

    <div class = "actions">
        <%= f.submit 'Update Book' %>
    </div>


<% end %>

    <div class = "action"></div>

    <%= link_to "show", book_path(@book) %>
    |
    <%= link_to "back", books_path(@book) %>

</body>
